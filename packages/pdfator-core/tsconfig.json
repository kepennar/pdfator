{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "target": "es5",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noStrictGenericChecks": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["lib/**/*"],
  "files": ["./lib/index.ts"]
}
