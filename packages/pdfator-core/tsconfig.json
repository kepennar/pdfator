{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "inlineSources": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noStrictGenericChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "include": ["lib/**/*"],
  "files": ["./lib/index.ts"]
}
